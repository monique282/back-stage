{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2020",
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        "tests"
    ]
}