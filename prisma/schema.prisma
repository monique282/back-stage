generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      String?   
  areas     Area[]    @relation("AreaUsers")
  processes Process[] @relation("ProcessCreatedBy")
  sessions  Session[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("users")
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  token     String   @db.VarChar(255)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("sessions")
}

model Area {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String?
  processes   Process[]
  users       User[]    @relation("AreaUsers")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("areas")
}

model Process {
  id          String    @id @default(uuid())
  name        String
  description String?
  area        Area      @relation(fields: [areaId], references: [id])
  areaId      Int
  parent      Process?  @relation("ProcessHierarchy", fields: [parentId], references: [id])
  parentId    String?
  children    Process[] @relation("ProcessHierarchy")
  tools       String[]
  responsible String[]
  documents   String[]
  createdBy   User?     @relation("ProcessCreatedBy", fields: [createdById], references: [id])
  createdById Int?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([areaId])
  @@index([parentId])
  @@index([createdById])
  @@map("processes")
}
